<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_toLeftOf="@id/arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#626B9E"
        android:text = "@string/Data_text_1"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
       android:layout_marginEnd="-10dp">
    </TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#626B9E"
        android:text="@string/Data_text_2"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_toEndOf="@id/arrow"
        android:layout_centerInParent="true"
        android:layout_marginStart="-10dp">
    </TextView>

    <TextView
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:text="@string/Arrow"
        android:textColor="@color/white"
        android:gravity="center">

    </TextView>

    <TextView
        android:id="@+id/upper_data_1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#626B9E"
        android:text="@string/upper_data_1"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_above="@id/arrow"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="15dp">
    </TextView>

    <ImageView
        android:id="@+id/vector_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_above="@id/upper_data_1"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="10dp">

    </ImageView>

    <TextView
        android:id="@+id/upper_data_2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#626B9E"
        android:text="@string/upper_data_2"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_above="@id/arrow"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@id/upper_data_1"
        android:layout_marginStart="20dp">
    </TextView>

    <ImageView
        android:id="@id/vector_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_above="@id/upper_data_2"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/vector_1">

    </ImageView>


    <TextView
        android:id="@+id/upper_data_3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#626B9E"
        android:text="@string/upper_data_3"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_above="@id/arrow"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@id/upper_data_2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp">
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_above="@id/upper_data_3"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/vector_2">

    </ImageView>

    <TextView

        android:id="@+id/below_data_1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@id/arrow"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center|left"
        android:layout_marginEnd="15dp"
        android:background="#626B9E"
        android:text="@string/upper_data_1"
        android:textColor="@color/white">

    </TextView>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/arrow"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@id/below_data_1"
        android:minWidth="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#626B9E"
        android:text="@string/Data_text_1"
        android:textColor="@color/white"
        android:layout_below="@id/arrow"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp">
    </TextView>
</RelativeLayout>